{
    // (Code Runner) ターミナルで実行する
    "code-runner.runInTerminal": true,
    // (Code Runner) 言語毎の実行プログラムの指定
    "code-runner.executorMap": {
        "c": "/usr/bin/clang $fullFileName -o \"$workspaceRoot/bin/$fileNameWithoutExt\" && \"$workspaceRoot/bin/$fileNameWithoutExt\"",
        "cpp": "/usr/bin/clang++ $fullFileName -o \"$workspaceRoot/bin/$fileNameWithoutExt\" && \"$workspaceRoot/bin/$fileNameWithoutExt\"",
        "csharp": "mcs $fullFileName -out:\"$workspaceRoot/bin/$fileNameWithoutExt\" && mono \"$workspaceRoot/bin/$fileNameWithoutExt\"",
        "java": "${JAVA_HOME}/bin/javac $fullFileName -d \"$workspaceRoot/bin\" && ${JAVA_HOME}/bin/java -cp \"$workspaceRoot/bin\" $fileNameWithoutExt",
        "javascript": "/usr/local/bin/node",
        "objective-c": "/usr/bin/clang -framework Cocoa $fullFileName -o \"$workspaceRoot/bin/$fileNameWithoutExt\" && \"$workspaceRoot/bin/$fileNameWithoutExt\"",
        "perl": "/usr/bin/perl",
        "php": "/usr/bin/php",
        "python": "/usr/local/bin/python3 -u",
        "shellscript": "/bin/bash",
        "ruby": "/usr/bin/ruby",
        "rust": "/usr/local/bin/rustc $fullFileName -o \"$workspaceRoot/bin/$fileNameWithoutExt\" && \"$workspaceRoot/bin/$fileNameWithoutExt\"",
        "swift": "/usr/bin/swift",
        "typescript": "/usr/local/bin/ts-node",
    },
    // (Code Runner) 拡張子毎の実行プログラムの指定
    "code-runner.executorMapByFileExtension": {
        ".d": "/usr/local/bin/dmd $fullFileName -of=\"$workspaceRoot/bin/$fileNameWithoutExt\" && \"$workspaceRoot/bin/$fileNameWithoutExt\"",
        ".dart": "/usr/local/bin/dart",
        ".kt": "/usr/local/bin/kotlinc $fullFileName -include-runtime -d \"$workspaceRoot/bin/$fileNameWithoutExt.jar\" && java -jar \"$workspaceRoot/bin/$fileNameWithoutExt.jar\"",
        ".scala": "/usr/local/bin/scalac $fullFileName -d \"$workspaceRoot/bin\" && scala -cp \"$workspaceRoot/bin\" $fileNameWithoutExt",
    }
}